{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./build",
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
    }
}